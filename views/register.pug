extends base

block content
    div.container
        h1.text-center Register
        div.row
            div.col-md-2
            div.col-md-8
                <form class="lores-form">
                    <div class="form-group col-md-6">
                        <label for="ip_firstname">First name</label>
                        <input type="text" class="form-control" id="ip_firstname" placeholder="First name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ip_lastname">Last name</label>
                        <input type="text" class="form-control" id="ip_lastname" placeholder="Last name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ip_password">Password</label>
                        <input type="password" class="form-control" id="ip_password" placeholder="Password">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ip_re-password">Re-enter Password</label>
                        <input type="password" class="form-control" id="ip_re-password" placeholder="Re-enter Password">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ip_email">Email</label>
                        <input type="text" class="form-control" id="ip_email" placeholder="Email">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ip_phone">Phone</label>
                        <input type="text" class="form-control" id="ip_phone" placeholder="Phone">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="ip_address">Address</label>
                        <input type="text" class="form-control" id="ip_address" placeholder="Address">
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>
                </form>
            div.col-md-2
