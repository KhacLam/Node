extends base

block content
    div.container.my_account
        div.row
            div.col-md-3.nav-bar-user
                div.d-flex.justify-content-center
                    //- img.rounded-circle(src="frontend/images/slider/fornt-img/1.png", alt="")
                    h3 Khac Lam
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="pill" href="#infor">My account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#bills">My bills</a>
                    </li>
                </ul>
            div.col-md-9
                <div class="tab-content">
                    <div class="tab-pane active" id="infor">
                        h2.text-center My Account
                        <form class="lores-form">
                            <div class="form-group col-md-12">
                                <label for="ip_username">Username</label>
                                <input type="text" class="form-control" id="ip_username" placeholder="Username">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="ip_firstname">First name</label>
                                <input type="text" class="form-control" id="ip_firstname" placeholder="First name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="ip_lastname">Last name</label>
                                <input type="text" class="form-control" id="ip_lastname" placeholder="Last name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="ip_password">Password</label>
                                <input type="password" class="form-control" id="ip_password" placeholder="Password">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="ip_phone">Phone</label>
                                <input type="text" class="form-control" id="ip_phone" placeholder="Phone">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="ip_email">Email</label>
                                <input type="text" class="form-control" id="ip_email" placeholder="Email">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="ip_address">Address</label>
                                <input type="text" class="form-control" id="ip_address" placeholder="Address">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="ip_image">Avatar</label>
                                <div style="display:flex; vertical">
                                    <img src="https://st3.depositphotos.com/1007566/13129/v/1600/depositphotos_131295836-stock-illustration-businessman-character-avatar-icon.jpg" alt="" style="width:70px;height:70px; border-radius:50%; border: 2px solid black">
                                    <input type="file" id="ip_image">
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="bills">My bills</div>
                </div>