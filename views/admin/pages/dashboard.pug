extends ../layout

mixin staticBox(title,icon,color,number)
    <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
        <div class="panel panel-teal panel-widget border-right">
            <div class="row no-padding"><em class="fa fa-xl #{icon} color-#{color}"></em>
                <div class="large">#{number}</div>
                <div class="text-muted">#{title}</div>
            </div>
        </div>
    </div>

mixin percentageBox(title,color,percent)
    <div class="col-xs-6 col-md-3">
        <div class="panel panel-default">
            <div class="panel-body easypiechart-panel">
                <h4>#{title}</h4>
                <div class="easypiechart" id="easypiechart-#{color}" data-percent="#{percent}" ><span class="percent">#{percent}</span></div>
            </div>
        </div>
    </div>

