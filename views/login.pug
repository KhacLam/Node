extends base

block content
    div.container
        h1.text-center Register
        div.row
            div.col-md-3
            div.col-md-6
                <form class="lores-form">
                    <div class="form-group col-md-12">
                        <label for="ip_cfemail">Email</label>
                        <input type="text" class="form-control" id="ip_cfemail" placeholder="Email">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="ip_cfpass">Password</label>
                        <input type="password" class="form-control" id="ip_cfpass" placeholder="Password">
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            div.col-md-3